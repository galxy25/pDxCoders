<h1 class="text-center">Listing cards</h1>

<div class="row centered small-8">
<ul class="accordion" data-accordion>
  <% @cards.each do |card| %>
    <li class="accordion-navigation ">
      <a href="#panel<%= card.id %>">A card <%= card.id %></a>
      <div id="panel<%= card.id %>" class="content">
        <%= render partial: card.content, locals: { content: card.content } %>
      </div>
    </li>
  <% end %>
</ul>
</div>
