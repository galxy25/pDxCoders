<%= social_share_button_tag("A CARD") %>
<%= link_to 'Examples', @card %>
<a href="#" data-dropdown="add-to-playlist" class="button dropdown">Add card to playlist</a>
<ul id="add-to-playlist" data-dropdown-content class="f-dropdown" aria-hidden="true">
  <% current_user.playlists.each do |playlist| %>
    <li class="drop-item" id="<%= playlist.id %>"><a href="#"><%= playlist.name %></a></li>
  <% end %>
  <li class="drop-item" id="card-view-new-playlist"><a href="#" data-reveal-id="newPlaylistModal">New playlist...</a></li>
</ul>
<div id="newPlaylistModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Create a new Playlist...</h2>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag('name') %>
  <%= submit_tag('Create', class: 'button') %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

