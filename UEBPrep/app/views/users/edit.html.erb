<% provide(:title, "UEBPrep - Edit Profile") %>

<div class="row">
  <div class="medium-3 medium-centered columns hide-for-small-only">
    <img src="assets/homepage/iHeader.png" alt="UEB Prep Logo: reading, games, chat" data-interchange="">
  </div>
</div>

<div class="row">
  <div class="app-block app-modalbox app-roundedbox small-10 medium-7 small-centered columns">
    <div class="app-txt-centered small-8 large-10 small-centered columns">
      <h4>Edit Profile</h4>
      <hr>
    </div>
    <div class="app-block small-16 large-10 small-centered columns">
      <%= render 'edit_profile' %>
    </div>
  </div>
  <%= render 'footer_links' %>
</div>

<div id="user_playlist_modal" class="row">
  <div class="app-block app-modalbox app-roundedbox small-3 small-uncentered columns">
    <h4 style="text-align: center">My Playlists</h4>
    <p style="text-align: center">(Click to edit)</p>
    <hr/>
    <ul id="user_playlists">
      <% @playlists.each do |playlist| %>
          <li style="list-style-type: none;text-align: center" class="user_playlist" playlist-id="<%= playlist.id %>"><%= playlist.name + " (" + playlist.cards.count.to_s + ")" %></li>
      <% end %>
    </ul>
  </div>
</div>

<div id="edit_playlist_dialog" style="display: none">
  <label for="playlist_title">Playlist Name</label><input id="playlist_title" type="text" />
  <ul id="sortable">
  </ul>
</div>
