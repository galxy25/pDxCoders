<% provide(:title, "UEBPrep - My Profile") %>

<% content_for :navlinks do %>
  <li class="active"><%=link_to "View Profile", {:controller => "users", :action => "show", :id => @user.id } %></li>
  <li class="active"><%= link_to "Edit Profile", profile_path, method: "get" %></li>
  <li class="active"><%= link_to "Logout", logout_path, method: "delete" %></li>
<% end %>

<div class="row app-txt-centered">
  <div class="medium-3 medium-centered columns hide-for-small-only">
    <img src="/assets/homepage/iHeader.png" alt="UEB Prep Logo: reading, games, chat" data-interchange="">
  </div>
</div>
<div class="row" style="float:left">
  <div class="app-block app-modalbox app-roundedbox small-3 small-uncentered columns">
    <h4>My Playlists</h4>
    <hr/>
    <ul id="user_playlists">
      <% @playlist.each do |playlist| %>
          <li>><%= playlist.name %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="app-block app-modalbox app-roundedbox small-10 medium-7 small-centered columns">
    <div class="app-txt-centered small-8 large-10 small-centered columns">
      <h4>My Profile</h4>
      <hr>
    </div>
    <div class="app-block small-8 medium-15 small-centered columns">
      <ul>
      	<%= render 'show_profile' %>
      </ul>
    </div>
  </div>
  <%= render 'footer_links' %>
</div>