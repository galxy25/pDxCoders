<% provide(:title, "UEBPrep - Login") %>
<% content_for :navlinks do %>
  <li class="active"><%= link_to "Sign Up", signup_path %></li>
  <li class="active"><%= link_to "Login", login_path %></li>
<% end %>
<div class="row">
  <div class="app-modalbox app-roundedbox small-10 medium-7 small-centered columns">
    <div class="app-txt-centered small-8 large-10 small-centered columns">
      <h4>Login</h4>
      <hr>
      <%= link_to user_omniauth_authorize_path(:google_oauth2) do %>
        <img class="app-btns app-roundedbox" src="assets/homepage/google.png" alt="image" data-interchange="">
      <% end %>
    </div>
    <br>
    <div class="app-block small-16 large-10 small-centered columns">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email %><%= f.email_field :email %>
        <%= f.label :password %><%= f.password_field :password %>
        <div id="home-newUserTxt">New User?</div>
        <br><%= f.submit "Log in", class: "button" %><%= link_to "Sign up!", signup_path, class: "button app-floatR" %>
      <% end %>
    </div>
  </div>
</div>